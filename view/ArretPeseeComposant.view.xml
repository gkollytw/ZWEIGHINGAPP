<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.ms.pp.Weighing.controller.ArretPeseeComposant" xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:tnt="sap.tnt">
	<Page showHeader="true" title="Interruption Pesée du Composant" showFooter="true" showNavButton="false" enableScrolling="true">
		<content>
			<!--<tnt:ToolHeader height="6rem" style="Clear">
				<Image src="{imageModel>/path}/img/logo_ms_cosmetics.png" width="5rem" class='imgBackground'></Image>
				<ToolbarSpacer/>
				<ToolbarSpacer/>
				<Text text="Interruption Pesée du Composant" wrapping="false" class='textTitle'></Text>
				<ToolbarSpacer/>
				<ToolbarSpacer/>
			</tnt:ToolHeader>-->
			<VBox fitContainer="true">
				<VBox alignItems="Center" justifyContent="Center" height="100%">
					<items>
						<Title text="Souhaitez-vous interrompre la pesée de ce composant ?" titleStyle="H1" width="100%" textAlign="Center" visible="true"
							wrapping="false"/>
						<Title text="" titleStyle="H3" width="100%" textAlign="Center" visible="true" wrapping="false"/>
						<Title text="Passage à l'article suivant" titleStyle="H2" width="100%" textAlign="Center" visible="true" wrapping="false"/>
					</items>
				</VBox>
			</VBox>
		</content>
		<footer>
			<Toolbar height="70px" class="toolbar">
				<content>
					<Button class="bigBtn" text="Annuler" type="Reject" icon="sap-icon://undo" iconFirst="true" width="auto" enabled="true" visible="true"
						iconDensityAware="false" press="_onAnnulerPress"/>
					<ToolbarSpacer/>
					<Button class="bigBtn" text="Retour Liste OF" icon="sap-icon://accept" type="Accept" iconFirst="true" width="auto" enabled="true"
						visible="true" iconDensityAware="false" press="_onListeOFPress"/>
					<Button class="bigBtn" text="Article Suivant" icon="sap-icon://accept" type="Accept" iconFirst="true" width="auto" enabled="true"
						visible="true" iconDensityAware="false" press="_onArticleSuivantPress"/>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>